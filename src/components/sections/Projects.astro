---
import { getCollection } from 'astro:content';
import ProjectCard from '@/components/ProjectCard.astro';
import Container from '@/components/Container';

// get all projects from the content collection
const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);
---

<Container className="mt-64">
  <h2 class="font-montserrat mb-8 text-4xl font-bold xl:text-6xl">Projects</h2>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      sortedProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          role={project.data.role}
          period={project.data.period}
          description={project.data.description}
          url={project.data.url}
        />
      ))
    }
  </div>
</Container>
