---
// Props are defined in the frontmatter section.
const { title, role, description, url } = Astro.props;
---

<div class="w-full mb-8">
  <div class="h-1 w-16 mb-4"></div>
  <div class="p-6 bg-gray-50 rounded-lg shadow-slate-500">
    <h3 class="text-2xl font-bold mb-2">{title}</h3>
    <h4 class="text-lg text-gray-600 mb-4">{role}</h4>
    <p class="mb-4">{description}</p>

    {
      url ? (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-custom hover:underline"
        >
          View the work
        </a>
      ) : (
        <p class="text-gray-500 italic">Internal application</p>
      )
    }
  </div>
</div>
