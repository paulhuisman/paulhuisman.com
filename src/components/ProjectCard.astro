---
// Props are defined in the frontmatter section.
const { title, role, period, description, url } = Astro.props;
---

<div class="mb-8 flex gap-8">
  <div class="mt-2 block h-5 w-20 flex-shrink-0 bg-black"></div>
  <div class="text-gray-900 md:mr-32">
    <h3 class="font-montserrat mb-2 text-3xl font-bold">{title}</h3>
    <h4 class="mb-4 text-base text-gray-600">{role} | {period}</h4>
    <p class="mb-4">{description}</p>
    {
      url ? (
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-custom hover:underline"
        >
          View the work
        </a>
      ) : (
        <p class="text-gray-500 italic">Internal application</p>
      )
    }
  </div>
</div>
